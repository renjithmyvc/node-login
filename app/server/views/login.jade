
extends layout

block content

.login_form
      // header
      .header.wow.fadeInDown
        .container
          .row
            .col-sm-3
              .logo
                h1
                  a(href="#") Logo
            | 	
            .col-sm-9
              .logo
                h1
                  a(href="") Doctor  Login
      // end
      // content
      .sign_in
        .container
          .row
            .col-md-12
              .col-md-6
                .hole_max.wow.fadeInRight
                  .section_vertical
                    .section_ones
                     
              | 					
              .col-md-6
                .hole_max.wow.fadeInLeft
                  .section_vertical
                    .section_one
                      form.form-horizontal(role="form")
                        .form-group
                          label.col-sm-3.control-label.use(for="userid") User Id
                          |                     
                          .col-sm-9
                            input#uerid.form-control(type="text", placeholder="")
                        |                 
                        |                 
                        .form-group
                          label.col-sm-3.control-label.use(for="password") Password
                          |                     
                          .col-sm-9
                            input#password.form-control(type="password", placeholder="Password")
                        |                 
                        |                 
                        .form-group
                          .col-sm-9.col-sm-offset-3
                            .checkbox
                              label
                                input(type="checkbox")
                                | Keep me signed in
                        // /.form-group
                        .login_btn
                          .two_btn
                            a.login_button(href="examination.htm") Login
                          | 						   
                          a.forget_password.firsttimeregister(href="forgotpassword_dctr_login.html") Forgot your User Id/Password? 
                          | 						   
                          a.forget_password.firsttimeregister(href="register.htm") First Time User Register Now 
        // end

	#login.center-vertical
		form.well(id='form-login', method='post')
			h2 Sign In
			h6 Please Login To Your Account
			.form-group
				label Username
				input.form-control(type='text', id='user-tf', name='user')
			.form-group
				label Password
				input.form-control(type='password', id='pass-tf', name='pass')
			.controls
				button(type='button').btn.btn-default.button-rememember-me
					span.glyphicon.glyphicon-unchecked.button-rememember-me-glyph
					| Remember Me
				button(type='submit').btn.btn-primary.button-sign-in
					span.glyphicon.glyphicon-lock
					| Sign In
			.clearfix
			hr
			.btm-links
				#forgot-password
					a(href='#') Forgot Your Password?
				#create-account
					a(href='/signup') Create An Account
			.clearfix

	include modals/alert
	include modals/lost-password

block scripts
	script(src='/vendor/jquery-2.2.3.min.js')
	script(src='/vendor/jquery.form.min.js')
	script(src='/vendor/bootstrap.min.js')
	script(src='/js/views/login.js')
	script(src='/js/controllers/loginController.js')
	script(src='/js/form-validators/loginValidator.js')
	script(src='/js/form-validators/emailValidator.js')
